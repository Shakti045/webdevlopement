<!DOCTYPE html>
<html>
<body>

<h1>Typewriter</h1>

<button onclick="typeWri()">Click me</button>

<p id="demo"></p>

<script>
var i = 0;
var txt = 'Lorem ipsum dummy text blabla.';
var speed = 50;

function typeWriter() {
  if (i < txt.length) {
    document.getElementById("demo").innerHTML += txt.charAt(i);
    i++;
    
  }else{
   
  document.getElementById("demo").innerHTML=""
  i=0;
  
  }
}
function typeWri(){
    setInterval(typeWriter,speed)
}

</script>

</body>
</html>
